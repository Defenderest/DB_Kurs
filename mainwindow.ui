  <property name="styleSheet">
   <string>/* === Base Styles === */
QMainWindow {
    background-color: #f0f2f5; /* Slightly cooler light gray */
    color: #1c1e21; /* Dark text */
}

QWidget {
    font-family: &quot;Segoe UI&quot;, system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 10pt;
}

/* === Tab Widget === */
QTabWidget::pane {
    border: none;
    background-color: #ffffff; /* White content background */
    border-radius: 0 0 6px 6px; /* Slightly smaller radius */
    padding: 20px;
}

QTabBar::tab {
    padding: 12px 20px; /* Adjusted padding */
    margin-right: 1px;
    background-color: transparent; /* Make inactive tabs transparent */
    border: none; /* Remove borders */
    border-bottom: 3px solid transparent; /* Bottom border for selection indicator */
    color: #606770; /* Medium gray text */
    font-weight: 500;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
}

QTabBar::tab:selected {
    background-color: #ffffff; /* White background for selected tab */
    color: #0062cc; /* Primary blue for selected text */
    font-weight: 600;
    border-bottom: 3px solid #0062cc; /* Blue indicator */
}

QTabBar::tab:hover:!selected {
    background-color: #e4e6eb; /* Light gray hover */
    color: #1c1e21; /* Darker text on hover */
    border-bottom: 3px solid #ced0d4; /* Gray indicator on hover */
}

QTabWidget::tab-bar {
    alignment: left;
    left: 5px; /* Slight indent */
}

/* === Input Fields === */
QLineEdit, QComboBox, QDateEdit {
    padding: 8px 12px;
    border: 1px solid #ccd0d5; /* Slightly softer border */
    border-radius: 5px;
    background-color: #ffffff;
    color: #1c1e21;
    min-height: 36px; /* Consistent height */
    font-size: 10pt;
}

QLineEdit:focus, QComboBox:focus, QDateEdit:focus {
    border-color: #0062cc; /* Blue border on focus */
    /* box-shadow: 0 0 0 1px #0062cc; /* Optional: add a subtle glow */
}

QLineEdit::placeholder {
    color: #8a8d91; /* Softer placeholder text */
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 25px; /* Slightly wider */
    border-left: 1px solid #ccd0d5;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}

QComboBox::down-arrow {
    /* Use a standard character or an SVG icon */
    /* image: url(:/icons/chevron-down.svg); */
    /* For simplicity, using a character here if no icon is set up */
     width: 10px;
     height: 10px;
}
QComboBox QAbstractItemView { /* Style dropdown list */
    border: 1px solid #ccd0d5;
    background-color: #ffffff;
    selection-background-color: #e7f3ff; /* Light blue selection */
    selection-color: #0062cc;
    padding: 4px;
}

/* === Buttons === */
/* General Button */
QPushButton {
    padding: 8px 16px;
    background-color: #0062cc; /* Primary blue */
    color: white;
    border: none;
    border-radius: 5px;
    font-weight: 500;
    min-height: 36px; /* Match input fields */
    font-size: 10pt;
}
QPushButton:hover {
    background-color: #005cbf; /* Darker blue */
}
QPushButton:pressed {
    background-color: #0052a8; /* Even darker */
}
QPushButton:disabled {
    background-color: #e4e6eb;
    color: #bcc0c4;
}

/* Header Icon Buttons */
QPushButton#cartButton, QPushButton#wishlistButton, QPushButton#profileButton {
    background-color: transparent;
    border: none;
    padding: 6px; /* Adjust padding */
    border-radius: 50%; /* Make circular */
    min-height: 38px; min-width: 38px; /* Fixed size */
    max-width: 38px; max-height: 38px;
    color: #606770; /* Icon color */
    font-size: 14pt; /* Adjust icon size if using text */
}
QPushButton#cartButton:hover, QPushButton#wishlistButton:hover, QPushButton#profileButton:hover {
    background-color: #e4e6eb; /* Light gray background on hover */
    color: #1c1e21;
}
QPushButton#cartButton:pressed, QPushButton#wishlistButton:pressed, QPushButton#profileButton:pressed {
    background-color: #d8dadf; /* Darker gray when pressed */
}

/* Filter/Sort/View Icon Buttons */
QPushButton#filterButton, QPushButton#sortButton, QPushButton#viewModeButton {
    background-color: #ffffff; /* White background */
    border: 1px solid #ccd0d5; /* Standard border */
    color: #606770; /* Icon color */
    min-width: 38px; max-width: 38px; /* Fixed size */
    min-height: 36px; max-height: 36px; /* Match input height */
    padding: 6px; /* Padding around icon */
    border-radius: 5px; /* Match input fields */
    font-size: 12pt; /* Adjust icon size */
}
QPushButton#filterButton:hover, QPushButton#sortButton:hover, QPushButton#viewModeButton:hover {
    background-color: #f0f2f5; /* Light gray on hover */
    border-color: #adb5bd;
    color: #1c1e21;
}
QPushButton#filterButton:pressed, QPushButton#sortButton:pressed, QPushButton#viewModeButton:pressed {
    background-color: #e4e6eb; /* Darker gray when pressed */
}
QPushButton#viewModeButton:checked {
    background-color: #e7f3ff; /* Light blue when checked */
    border-color: #0062cc;
    color: #0062cc;
}


/* === Scroll Area & Scroll Bars === */
QScrollArea {
    border: none;
    background-color: transparent;
}
QScrollBar:vertical {
    border: none;
    background: #e4e6eb; /* Track color */
    width: 8px; /* Thinner scrollbar */
    margin: 0px 0px 0px 0px;
    border-radius: 4px;
}
QScrollBar::handle:vertical {
    background: #bcc0c4; /* Handle color */
    min-height: 25px;
    border-radius: 4px;
}
QScrollBar::handle:vertical:hover {
    background: #a4a8ad; /* Darker handle on hover */
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    border: none; background: none; height: 0px;
}
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}
/* Horizontal Scroll Bar (similar styling) */
QScrollBar:horizontal {
    border: none; background: #e4e6eb; height: 8px; margin: 0px 0px 0px 0px; border-radius: 4px;
}
QScrollBar::handle:horizontal {
    background: #bcc0c4; min-width: 25px; border-radius: 4px;
}
QScrollBar::handle:horizontal:hover {
    background: #a4a8ad;
}
QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    border: none; background: none; width: 0px;
}
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

/* === Status Bar === */
QStatusBar {
    background-color: #f0f2f5; /* Match main background */
    color: #606770; /* Medium gray text */
    font-size: 9pt;
    border-top: 1px solid #d8dadf; /* Separator line */
}

/* === Labels === */
QLabel {
   color: #1c1e21; /* Default dark text */
   background-color: transparent;
}
QLabel#logoLabel {
   font-size: 18px; /* Slightly smaller logo */
   font-weight: 600; /* Semi-bold */
   color: #000000;
   padding-left: 0px; /* No extra padding */
}
QLabel#bannerLabel {
   background-color: qlineargradient(spread:pad, x1:0, y1:0.5, x2:1, y2:0.5, stop:0 #0062cc, stop:1 #004c9e); /* Simpler blue gradient */
   border-radius: 8px; /* Consistent radius */
   color: #ffffff;
   font-size: 24px; /* Slightly smaller */
   font-weight: 600;
   padding: 30px; /* Adjusted padding */
}
QLabel#categoryHeaderLabel, QLabel#bestsellerHeaderLabel, QLabel#newReleaseHeaderLabel {
   font-size: 16px; /* Header font size */
   font-weight: 600;
   color: #1c1e21; /* Dark text */
   margin-top: 20px;
   margin-bottom: 10px;
   padding-bottom: 5px;
   border-bottom: 1px solid #e4e6eb; /* Lighter border */
}
QLabel#dateFilterLabel {
    color: #606770; /* Match placeholder text color */
}

/* === Category Buttons (Discover Tab) === */
QWidget#categoriesWidget QPushButton {
    background-color: #ffffff;
    color: #0062cc; /* Blue text */
    border: 1px solid #ccd0d5; /* Softer border */
    font-weight: 500; /* Normal weight */
    text-align: center;
    padding: 15px;
    min-height: 110px; /* Adjusted height */
    border-radius: 6px;
}
QWidget#categoriesWidget QPushButton:hover {
    background-color: #f0f2f5; /* Light gray hover */
    color: #005cbf;
    border-color: #adb5bd;
}
QWidget#categoriesWidget QPushButton:pressed {
    background-color: #e4e6eb; /* Darker gray press */
}

/* === Specific Widget Adjustments === */
QLineEdit#globalSearchLineEdit {
    min-height: 38px; /* Slightly taller search */
}
