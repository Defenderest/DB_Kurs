}
/* Стилі для різних статусів (можна додати більше) */
QLabel#orderStatusLabel[status="new"] { background-color: #0d6efd; } /* Синій */
QLabel#orderStatusLabel[status="processing"] { background-color: #ffc107; color: #343a40; } /* Жовтий */
QLabel#orderStatusLabel[status="shipped"] { background-color: #0dcaf0; color: #343a40; } /* Бірюзовий */
QLabel#orderStatusLabel[status="delivered"] { background-color: #198754; } /* Зелений */
QLabel#orderStatusLabel[status="cancelled"] { background-color: #dc3545; } /* Червоний */

QPushButton#viewOrderDetailsButton {
    /* Використовує загальний стиль QPushButton */
    padding: 6px 12px; /* Менший padding */
    font-size: 9pt; /* Менший шрифт */
