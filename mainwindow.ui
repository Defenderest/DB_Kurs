    /* Styling for the main content area of the tabs */
    QTabWidget::pane {
      border: none; /* Remove border around the content */
      background-color: #ffffff; /* White background for tab content */
      border-radius: 0 0 8px 8px; /* Round bottom corners */
      padding: 20px; /* Padding inside the tab content */
    }
    /* Styling for individual tabs */
    QTabBar::tab {
      padding: 14px 24px; /* Generous padding */
      margin-right: 2px; /* Small space between tabs */
      background-color: #e9ecef; /* Light gray inactive tab */
      border: 1px solid #dee2e6; /* Subtle border */
      border-bottom: none; /* Remove bottom border for inactive */
      border-top-left-radius: 8px; /* Round top-left corner */
      border-top-right-radius: 8px; /* Round top-right corner */
      color: #495057; /* Medium gray text for inactive */
      font-weight: 500; /* Medium font weight */
    }
    /* Styling for the selected tab */
    QTabBar::tab:selected {
      background-color: #ffffff; /* White background for active tab */
      color: #000000; /* Black text for active tab */
      font-weight: 600; /* Bolder font weight */
      border-color: #dee2e6; /* Match pane border */
    }
    /* Styling for hovered tabs (not selected) */
    QTabBar::tab:hover:!selected {
        background-color: #f1f3f5; /* Slightly lighter gray on hover */
        color: #343a40; /* Darker text on hover */
    }
    /* Align tabs to the left */
    QTabWidget::tab-bar {
        alignment: left;
        left: 10px; /* Indent the tab bar slightly */
    }

    /* Styling for input fields */
    QLineEdit, QComboBox, QDateEdit {
      padding: 10px 12px;
      border: 1px solid #ced4da; /* Standard border */
      border-radius: 6px; /* Slightly rounded corners */
      background-color: #ffffff; /* White background */
      color: #212529; /* Dark text */
      min-height: 38px; /* Consistent height */
    }
    QLineEdit:focus, QComboBox:focus, QDateEdit:focus {
      border-color: #80bdff; /* Blue border on focus (Bootstrap-like) */
    }
    QLineEdit::placeholder {
      color: #6c757d; /* Gray placeholder text */
    }
    /* Styling for ComboBox dropdown arrow area */
    QComboBox::drop-down {
        subcontrol-origin: padding;
        subcontrol-position: top right;
        width: 20px;
        border-left-width: 1px;
        border-left-color: #ced4da;
        border-left-style: solid;
        border-top-right-radius: 6px; /* Match parent radius */
        border-bottom-right-radius: 6px; /* Match parent radius */
    }
    /* Arrow icon for ComboBox */
    QComboBox::down-arrow {
        /* Assuming you have an icon file icons/chevron-down.svg */
        image: url(icons/chevron-down.svg);
        width: 12px;
        height: 12px;
    }

    /* General Button Styling */
    QPushButton {
      padding: 10px 18px;
      background-color: #007bff; /* Primary blue */
      color: white;
      border: none;
      border-radius: 6px; /* Rounded corners */
      font-weight: 500; /* Medium weight */
      min-height: 38px; /* Match input field height */
    }
    QPushButton:hover {
      background-color: #0056b3; /* Darker blue on hover */
    }
    QPushButton:pressed {
      background-color: #004085; /* Even darker blue when pressed */
    }

    /* Specific styling for header icon buttons */
    QPushButton#cartButton, QPushButton#wishlistButton, QPushButton#profileButton {
      background-color: transparent; /* No background */
      border: none;
      padding: 8px;
      border-radius: 18px; /* Circular hover effect */
      min-height: 36px; min-width: 36px; /* Fixed size */
      max-width: 36px; max-height: 36px;
    }
    QPushButton#cartButton:hover, QPushButton#wishlistButton:hover, QPushButton#profileButton:hover {
      background-color: #e9ecef; /* Light gray background on hover */
    }
    QPushButton#cartButton:pressed, QPushButton#wishlistButton:pressed, QPushButton#profileButton:pressed {
      background-color: #dee2e6; /* Darker gray when pressed */
    }

    /* Specific styling for filter/sort icon buttons */
    QPushButton#filterButton, QPushButton#sortButton, QPushButton#viewModeButton {
        background-color: #f8f9fa; /* Match main background */
        border: 1px solid #ced4da; /* Standard border */
        color: #495057; /* Medium gray icon color (if needed) */
        min-width: 40px; max-width: 40px; /* Fixed size */
        padding: 8px; /* Padding around icon */
        border-radius: 6px; /* Match input fields */
    }
     QPushButton#filterButton:hover, QPushButton#sortButton:hover, QPushButton#viewModeButton:hover {
        background-color: #e9ecef; /* Light gray on hover */
        border-color: #adb5bd; /* Darker border on hover */
     }
    QPushButton#filterButton:pressed, QPushButton#sortButton:pressed, QPushButton#viewModeButton:pressed {
        background-color: #dee2e6; /* Darker gray when pressed */
     }

    /* Scroll Area Styling */
    QScrollArea {
      border: none; /* No border around scroll areas */
      background-color: transparent; /* Inherit background */
    }
    /* Vertical Scroll Bar Track */
    QScrollBar:vertical {
        border: none;
        background: #f1f3f5; /* Light gray track */
        width: 10px; /* Width of the scrollbar */
        margin: 0px 0px 0px 0px;
        border-radius: 5px; /* Rounded track */
    }
    /* Vertical Scroll Bar Handle */
    QScrollBar::handle:vertical {
        background: #ced4da; /* Medium gray handle */
        min-height: 20px; /* Minimum handle size */
        border-radius: 5px; /* Rounded handle */
    }
    QScrollBar::handle:vertical:hover {
        background: #adb5bd; /* Darker handle on hover */
    }
    /* Hide scroll bar arrows */
    QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
        border: none;
        background: none;
        height: 0px;
    }
     /* Hide space below/above handle */
     QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
         background: none;
     }
     /* Horizontal Scroll Bar (similar styling, adapt if needed) */
     QScrollBar:horizontal {
        border: none;
        background: #f1f3f5;
        height: 10px;
        margin: 0px 0px 0px 0px;
        border-radius: 5px;
     }
     QScrollBar::handle:horizontal {
        background: #ced4da;
        min-width: 20px;
        border-radius: 5px;
     }
     QScrollBar::handle:horizontal:hover {
        background: #adb5bd;
     }
     QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
        border: none;
        background: none;
        width: 0px;
     }
     QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
         background: none;
     }


