QWidget {
    font-family: "Segoe UI", system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 10pt;
}

QTabWidget::pane {
    border: 1px solid #dee2e6;
    border-top: none;
    background-color: #ffffff;
    border-radius: 0 0 4px 4px;
    padding: 15px;
}

QTabBar::tab {
    padding: 10px 18px;
    margin-right: 2px;
    background-color: #e9ecef;
    border: 1px solid #dee2e6;
    border-bottom: none;
    color: #495057;
    font-weight: 500;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

QTabBar::tab:selected {
    background-color: #ffffff;
    color: #495057; /* Змінено на темно-сірий */
    font-weight: 600;
    border-color: #dee2e6;
    border-bottom: 1px solid #ffffff;
    margin-bottom: -1px;
}

QTabBar::tab:hover:!selected {
    background-color: #dee2e6;
    color: #212529;
    border-color: #ced4da;
}

QTabWidget::tab-bar {
    alignment: left;
    left: 5px;
}

QLineEdit, QComboBox, QDateEdit, QSpinBox { /* Додано QSpinBox */
    padding: 8px 10px;
    border: 1px solid #ced4da;
    border-radius: 4px;
    background-color: #ffffff;
    color: #212529;
    min-height: 34px;
    font-size: 10pt;
}
QLineEdit:focus, QComboBox:focus, QDateEdit:focus {
    border-color: #adb5bd; /* Змінено на сірий */
    box-shadow: 0 0 0 0.2rem rgba(173, 181, 189, 0.25); /* Змінено колір тіні на сірий */
}

QLineEdit::placeholder {
    color: #6c757d;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 20px;
    border-left: 1px solid #ced4da;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
}

QComboBox::down-arrow {
     image: url(:/icons/down-arrow.png);
     width: 10px;
     height: 10px;
}
QComboBox QAbstractItemView {
    border: 1px solid #ced4da;
    background-color: #ffffff;
    selection-background-color: #e9ecef; /* Змінено на світло-сірий */
    selection-color: #000;
    padding: 4px;
}

QPushButton {
    padding: 8px 14px;
    background-color: #6c757d; /* Змінено на сірий */
    color: white;
    border: 1px solid #6c757d; /* Змінено на сірий */
    border-radius: 8px; /* Збільшено заокруглення */
    font-weight: 500;
    min-height: 34px;
    font-size: 10pt;
    /* transition: background-color 0.15s ease-in-out, border-color 0.15s ease-in-out; */ /* transition is not a standard Qt property */
}
QPushButton:hover {
    background-color: #5a6268; /* Змінено на темніший сірий */
    border-color: #545b62; /* Змінено на темніший сірий */
}
QPushButton:pressed {
    background-color: #545b62; /* Змінено на темніший сірий */
    border-color: #4e555b; /* Змінено на ще темніший сірий */
}
QPushButton:disabled {
    background-color: #6c757d;
    color: #ffffff;
    border-color: #6c757d;
    opacity: 0.65;
}

QPushButton#cartButton, QPushButton#wishlistButton, QPushButton#profileButton {
    background-color: transparent;
    border: 1px solid transparent;
    padding: 6px;
    border-radius: 8px; /* Збільшено заокруглення */
